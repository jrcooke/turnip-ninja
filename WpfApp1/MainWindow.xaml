<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox>
            <Button Name="getCurrLocButt" IsEnabled="False" Content="Get current location"  Click="ButtClick2"/>
        </ListBox>
        <Image Name="mainImage" HorizontalAlignment="Left" Height="350" Margin="0,81,0,0" VerticalAlignment="Top" Width="350"/>
        <ScrollViewer Margin="340,0,0,0" >
            <TextBlock Name="output"
                   TextWrapping="Wrap"
                   Text="{Binding Path=Text}"/>
        </ScrollViewer>
        
    </Grid>
</Window>
